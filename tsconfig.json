{
  "compilerOptions": {
    "paths": {
      "@/*": ["../*"],
      "~/*": ["./*"]
    },
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src/",
    "rootDirs": ["src/"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "jsxFactory": "h",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "target": "es2022",
    "lib": ["ES2023", "DOM"]
  },
  "include": ["src/components", "src"],
  "exclude": ["node_modules"]
}
